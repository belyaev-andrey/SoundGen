<Window x:Class="SoundGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Generate Sound File" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="FileNameLbl" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        <ComboBox Name="CoeffList" Grid.Column="2" Grid.Row="0"/>
        <Button Name="OpenFileBtn" Click="OpenFileBtn_OnClick" Grid.Column="0" Grid.Row="1">OpenFile</Button>
        <Button Name="CancelBtn" Click="CancelBtn_OnClick" Grid.Column="2" Grid.Row="1">Cancel Generation</Button>
        <TextBox Name="LinesText" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto"/>
        <ProgressBar Name="GenerationProgressBar" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3"/>
        <!-- <Image Name="WaveImage" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3"/> -->
    </Grid>
</Window>
